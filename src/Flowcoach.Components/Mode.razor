@inject NavigationManager NavigationManager

<div class="container w-85 mb-5 grid-container d-flex align-items-center">
    @foreach (var modeCard in modeCards)
    {
        <div class="grid-item text-decoration-none text-white p-0 mx-2 my-5 border-0 rounded-3 bg-dark position-relative d-flex flex-column justify-content-center" @onclick="() => NavigateTo(modeCard.RedirectPath)">
            <img src="@modeCard.Image" alt="Alternate Text" class="img-fluid mb-2 rounded-2" />
            <h2 class="p-1">
                @modeCard.Title
            </h2>
            <p class="p-1">
                @modeCard.Description
            </p>
        </div>
    }
</div>




@code {
    [Parameter]
    public string redirectPath { get; set; } = default;

    private IList<ModeCard> modeCards = new List<ModeCard>
    {
        new ModeCard
        {
            Image = "/images/FC1.jpg",
            Title = "Forandring",
            Description = "Kom væk fra den negative følelse",
            RedirectPath = "/forandring"
        },
        new ModeCard
        {
            Image = "/images/FC2.jpg",
            Title = "Selvomsorg",
            Description = "Det sikre sted, øvelse m.m.",
            RedirectPath = "/selvomsorg"
        }
    };

    public void NavigateTo(string uri)
    {
        NavigationManager.NavigateTo(uri);
    }

    private class ModeCard
    {
        public string Image { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
        public string RedirectPath { get; set; }
    }

}
